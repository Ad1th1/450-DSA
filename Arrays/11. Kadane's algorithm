class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to find the sum of contiguous subarray with maximum sum.
    long long maxSubarraySum(int arr[], int n){
            int curr=0,msum=arr[0];
        
        for(int i=0;i<n;i++){
            curr+=arr[i];
            msum=max(curr,msum);
            if(curr<0)
                curr=0;
        }
        return msum;
        
    }
};
